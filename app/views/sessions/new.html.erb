<div class="authform">
  <h1>Sign In</h1>
    <%= form_for(:session, url: login_path) do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username, autofocus: true %><br>
    <%= f.label :password %>
    <%= f.password_field :password %><br>
    <%= f.submit "Sign in" %><br>
    <p class="authform-or">OR</p>
    <div class="google-signin">
      <div>
        <%= link_to "Sign in with Google", "/auth/google_oauth2" %>
      </div>
      <%= image_tag "icon-google.svg" %>
        <h4>New user? <%= link_to "Sign up now!", signup_path %></h4>
      </div>
  <% end %>
</div>
